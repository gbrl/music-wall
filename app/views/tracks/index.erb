<h2>All Tracks</h2>
<br />
<% @tracks.each do |track| %>
  <div class="track">
  <h3>
    <% if session && session["user"] %>
    <a href="/track/upvote/<%= track.id %>">&uarr;</a><a href="/track/downvote/<%= track.id %>">&darr;</a> &nbsp;
    <% end %>
    ( <%= track.popularity %> ) <a href="/tracks/<%= track.id %>"><%= track.title %></a> 
      <small> by <%= track.author %></small> 
      <% if track.user %>
        <small>( uploaded by <%= track.user.username %> )</small>
      <% end %>
      </h3> 
  </div>
<% end %>